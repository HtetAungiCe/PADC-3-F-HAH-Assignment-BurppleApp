<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_burpple_guide_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:foreground="@android:drawable/screen_background_dark_transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/bbqtown" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_guide_burpple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginTop="48dp"
                android:shadowColor="@color/full_black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:lineSpacingMultiplier="1"
                android:shadowRadius="2"
                android:text="BBQ and Girl"
                android:textColor="@color/full_white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_guide_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_guide_burpple"
                android:layout_marginLeft="36dp"
                android:shadowColor="@color/full_black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="burpple"
                android:drawableLeft="@drawable/ic_av_timer_black_24dp"
                android:textColor="@color/full_white"
                android:textSize="12sp" />

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>

