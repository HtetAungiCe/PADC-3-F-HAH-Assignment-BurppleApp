<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_news_trending_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Newly Opened"
            android:textColor="@color/primary_dark"
            android:textSize="16sp" />


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_news_trending_shisukamura"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/shisukamura"
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp" />


            <TextView
                android:id="@+id/tv_news_trending_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:text="Sushi Kimura"
                android:textColor="@color/primary_text" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_news_trending_nesuto"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/nesuto"
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp" />


            <TextView
                android:id="@+id/tv_news_trending_nesuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:text="Nesuto"
                android:textColor="@color/primary_text" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_news_trending_picture"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/shisukamura"
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp" />


            <TextView
                android:id="@+id/tv_news_trending_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:text="Sushi Bar"
                android:textColor="@color/primary_text" />


        </LinearLayout>


        <TextView
            android:id="@+id/divider_news_trending"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="8dp"
            android:background="@color/divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_news_trending_heading"
            android:layout_below="@id/divider_news_trending"
            android:layout_marginTop="8dp"
            android:text="Explore"
            android:layout_marginLeft="18dp"
            android:textAllCaps="true"
            android:textColor="@color/secondary_text" />

    </LinearLayout>
    </android.support.v7.widget.CardView>
